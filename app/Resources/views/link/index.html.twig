{% extends 'base.html.twig' %}


{% block stylesheets %}
{{ parent() }}
 <link rel="stylesheet" href="{{ asset('css/link.css') }}" />
 {% endblock %}

{% block body %}

        {% for link in links %}
            <div>
            <i class="fa fa-caret-up" aria-hidden="true"></i>
<a href="{{ link.url }}" target="_blank"><h2>{{ link.title }}</h2></a>
                <p>{{ link.points }} points by <a class="sousTitre" href="{{path('fos_user_profile_show',{'id' : link.getUser().id})}}">{{ link.getUser() }}</a> published the {{ link.date|date('Y-m-d') }} | {{ link.nbCom }} Comments </p>

        {% endfor %}

{% endblock %}
