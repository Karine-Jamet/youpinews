{% extends 'base.html.twig' %}

{% block body %}
<h1>Link</h1>

<table>
  <tbody>
    <tr>
      <th>Url</th>
      <td>{{ link.url }}</td>
    </tr>
    <tr>
      <th>Title</th>
      <td>{{ link.title }}</td>
    </tr>
    <tr>
      <th>Date</th>
      <td>{% if link.date %}{{ link.date|date('Y-m-d H:i:s') }}{% endif %}</td>
    </tr>
    <tr>
      <th>Points</th>
      <td>{{ link.points }}</td>
    </tr>
    <tr>
      <th>Nbcom</th>
      <td>{{ link.nbCom }}</td>
    </tr>
    <tr>
      <th>Author</th>
      <td>{{ link.getUser() }}</td>
    </tr>
  </tbody>
</table>

<ul>
  <li>
    <a href="{{ path('link_index') }}">Back to Youpi News !</a>
  </li>
  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
  {% if app.user == link.getUser() %}
  <li>
    <a href="{{ path('link_edit', { 'id': link.id }) }}">Edit</a>
  </li>
  <li>
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete">
    {{ form_end(delete_form) }}
  </li>
  {% endif %}
  {% endif %}
</ul>
{% endblock %}
